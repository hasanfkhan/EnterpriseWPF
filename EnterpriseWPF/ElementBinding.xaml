<Window x:Class="EnterpriseWPF.ElementBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ElementBinding" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Slider Name="MySlider" Minimum="0" Maximum="100" Width="250" />
            <TextBlock Margin="5" Text="{Binding Value, ElementName=MySlider}"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
