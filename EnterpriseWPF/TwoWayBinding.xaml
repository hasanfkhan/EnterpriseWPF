<Window x:Class="EnterpriseWPF.TwoWayBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TwoWayBinding" Height="300" Width="300">
    <Grid>
        <StackPanel Name="Display">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: "/>
                <TextBox Margin="5,0,0,0" Text="{Binding Name, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Title: "/>
                <TextBox Margin="5,0,0,0" Text="{Binding Title, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: "/>
                <TextBlock Margin="5,0,0,0" Text="{Binding Name}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Title: "/>
                <TextBlock Margin="5,0,0,0" Text="{Binding Title}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
